<form action="/user/create" method="POST">
    <h2><%= i18n('create-account') %></h2>

    <% if(flash && flash.err) { %>
        <ul class="alert alert-success">
            <% flash.err.forEach(function(error) { %>
            <li><%- error %></li>
            <% }) %>
        </ul>
    <% } %>

    <div>
        <!--todo i18n нужно дерево-->
        <input type="text" class="form-control" placeholder="<%= i18n('user-name') %>" name="name">
    </div>

    <div>
        <input type="text" class="form-control" placeholder="<%= i18n('last-name') %>" name="lastName">
    </div>

    <div class="control-group">
        <input type="text" class="form-control" placeholder="<%= i18n('email') %>" name="email">
    </div>

    <div class="control-group">
        <select name="role" type="text" class="form-control">
            <!--todo убрать в справочник -->
            <option value="user" selected>
                <%= i18n('role-user') %>
            </option>
            <option value="owner">
                <%= i18n('role-owner') %>
            </option>
            <option value="admin">
                <%= i18n('role-admin') %>
            </option>
            <option value="driver">
                <%= i18n('role-driver') %>
            </option>
            <option value="manager">
                <%= i18n('role-manager') %>
            </option>
            <option value="storekeeper">
                <%= i18n('role-storekeeper') %>
            </option>
            <!--/todo-->
        </select>
    </div>

    <div class="control-group">
        <input type="password" class="form-control" placeholder="<%= i18n('password') %>" name="password">
    </div>

    <div class="control-group">
        <input type="password" class="form-control" placeholder="<%= i18n('confirm-password') %>" name="confirmation">
        <br/>
    </div>

    <input type="submit" class="btn btn-lg btn-primary btn-block" value="<%= i18n('create-account-btn') %>"/>
    <!--<input type="hidden" name="_csrf" value="<%= _csrf %>"/>-->
</form>
