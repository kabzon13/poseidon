<form action="/session/create" method="POST" class="form-signin">
    <h2 class="form-signin-heading"><%= i18n('auth') %></h2>

    <% if(flash && flash.err) { %>
    <ul class="alert alert-success">
        <% flash.err.forEach(function(error) { %>
        <li><%= error %></li>
        <% }) %>
    </ul>
    <% } %>

    <input type="text" class="form-control" placeholder="<%= i18n('email') %>" name="email">
    <input type="password" class="form-control" placeholder="<%= i18n('password') %>" name="password">
    <input type="submit" class="btn btn-lg btn-primary btn-block" value="<%= i18n('sign-in-btn') %>"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>

</form>
